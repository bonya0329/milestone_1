
@model milestone_1.ViewModels.LoginModel

<a asp-action="Register" asp-controller="Account">Registration</a>

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap" id="login">
                    <h2 class="mb-4">Log in to your account</h2>
                    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="text" asp-for="Email" class="form-control py-2" />
                                    <span asp-validation-for="Email" />
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-12 form-group">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control py-2" />
                                    <span asp-validation-for="Password" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <input type="submit" value="Login" class="btn btn-primary px-5 py-2" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>